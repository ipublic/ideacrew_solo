<h1>Get In Touch</h1>
<h1><small>Interested in learning more? Want to join our amazing team? Send us a note and someone from the IdeaCrew team will contact you</small></h1>

<div id="contact-form" class="col-md-offset-3 col-md-6">
  <%= form_tag welcome_contact_us_path, :method => 'get' do %>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="form-group required">
          <%= label_tag "Resume/CV" %>
          <%= file_field_tag 'resume', value: '~/resume.doc', class: "form-control btn btn-primary btn-lg btn-block", required: true %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="form-group required">
          <%= label_tag :first_name %>
          <%= text_field_tag "first_name", nil, class: "form-control", required: true %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="form-group required">
          <%= label_tag :last_name %>
          <%= text_field_tag "last_name", nil, class: "form-control", required: true %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="form-group required">
          <%= label_tag :email %>
          <%= email_field_tag "email", nil, class: "form-control", required: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="form-group required">
          <%= label_tag :phone %>
          <%= text_field_tag "phone", nil, class: "form-control", required: true %>
        </div>
      </div>
    </div>


    <legend>Links</legend>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="form-group required">
          <%= label_tag :linkedin_url %>
          <%= text_field_tag "linkedin_url", nil, class: "form-control", required: true %>
        </div>
      </div>
    </div>
x    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="form-group required">
          <%= label_tag :twitter_url %>
          <%= text_field_tag "twitter_url", nil, class: "form-control", required: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="form-group required">
          <%= label_tag :github_url %>
          <%= text_field_tag "github_url", nil, class: "form-control", required: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="form-group required">
          <%= label_tag :porfolio_url %>
          <%= text_field_tag "porfolio_url", nil, class: "form-control", required: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="form-group required">
          <%= label_tag :other_website %>
          <%= text_field_tag "other_website", nil, class: "form-control", required: true %>
        </div>
      </div>
    </div>

    <legend>Cover Letter</legend>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="form-group required">
          <%= label_tag "Please let us know more about you and your interest in this position in a cover letter" %>
          <%= text_area_tag "cover_letter", nil, class: "form-control", rows: 5, required: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <%= submit_tag 'Submit', :name => nil, type: "submit", class: "btn btn-primary btn-lg btn-block" %>
      </div>
    </div>
  <% end %>
</div>
